{
  "preset": "ts-jest",
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  // "testRegex": "test/(.+)\\.test\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "setupFiles": ["dotenv/config"]
}
